#!/bin/bash

set -x
set -e

if [ -z "$1" ]
  then
    echo "Usage:"
    echo "  ./deploy.sh VERSION"
    exit -1
fi
VERSION=$1

docker build -f Dockerfile.baseimage -t grow/buildbot-baseimage:latest .
docker build -f Dockerfile.master -t grow/buildbot-master:$VERSION .
docker build -f Dockerfile.worker -t grow/buildbot-worker:$VERSION .

# docker tag -f $IMAGE:$NOW $IMAGE:latest
echo 'Built!'
